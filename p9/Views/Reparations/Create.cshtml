@model p9.Models.Reparation

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Reparation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DateReparation" class="control-label"></label>
                <input asp-for="DateReparation" class="form-control" />
                <span asp-validation-for="DateReparation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeIntervention" class="control-label"></label>
               @*<input asp-for="TypeIntervention" class="form-control" />
                <span asp-validation-for="TypeIntervention" class="text-danger"></span>*@
                @Html.DropDownListFor(model => model.TypeIntervention, ViewBag.TypeInterventions as SelectList, "Sélectionner une reparation", new { @class = "form-control" })
            </div>
                <div class="form-group">
                <label asp-for="CoutReparation" class="control-label"></label>
                <input asp-for="CoutReparation" class="form-control" />
                <span asp-validation-for="CoutReparation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VoitureId" class="control-label"></label>
                <select asp-for="VoitureId" class ="form-control" asp-items="ViewBag.VoitureId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
